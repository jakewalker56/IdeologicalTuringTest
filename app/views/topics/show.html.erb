<% if !ENV["SHOW_STATS_LINK"].present? || ENV["SHOW_STATS_LINK"].downcase == "true"%>
   <%= link_to "See Topic Stats", topic_stats_url(@topic), class: "btn btn-itt" %>
<% end %>
<% if @topic_option.present? %>
	<%= render 'show_one_topic_option' %>
<% else %>
	<%= render 'show_all_topic_options', spoiler: false %>
<% end %>