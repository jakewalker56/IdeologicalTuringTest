<%= form_for(@topic, validate: true) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'sr-only' %>
    <%= f.text_field :name, placeholder: 'Topic Name', class: 'form-control' %>
  </div>
  
  <%= f.fields_for :topic_options do |builder| %>
    <%= render "topic_option_fields", :f => builder %>
  <% end %>

  <div class="col-md-12 col-sm-12">
    <p><%= link_to_add_fields "Add Option", f, :topic_options %></p>
  </div>

  <div class="form-group">
    <%= f.submit "Save Topic", class: 'btn btn-itt pull-right' %>
  </div>
<% end %>


